<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gudang.controller.SupplierController">
   <children>
      <Label text="Manajemen Supplier"><font><Font name="System Bold" size="18.0" /></font></Label>
      <TableView fx:id="tabelSupplier" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="kolomKode" text="Kode Supplier" />
          <TableColumn fx:id="kolomNama" text="Nama Supplier" />
          <TableColumn fx:id="kolomAlamat" text="Alamat" />
          <TableColumn fx:id="kolomTelepon" text="Nomor Telepon" />
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button onAction="#handleTambah" text="Tambah Supplier" />
            <Button onAction="#handleEdit" text="Edit Supplier" />
            <Button onAction="#handleHapus" text="Hapus Supplier" />
         </children>
      </HBox>
   </children>
   <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
</VBox>